# second pass lexer
lexer2-dep := lexer2.cc $(common) lexer1.o lexer1yy.o $(AST)/fileloc.o \
              $(AST)/strtable.o cc_lang.o $(libraries)
lexer2: $(lexer2-dep) lexer2.h
